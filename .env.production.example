# Production Environment Configuration

# Database Configuration
POSTGRES_DB=statsentry
POSTGRES_USER=statsentry
POSTGRES_PASSWORD=your_secure_database_password_here

# Application Configuration
STEAM_API_KEY=your_steam_api_key_here
SECRET_KEY=your_super_secure_jwt_secret_key_here
FRONTEND_URL=https://statsentry.your-domain.com
BACKEND_URL=https://statsentry.your-domain.com

# Optional: Leetify API Integration
LEETIFY_API_KEY=your_leetify_api_key_here

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here