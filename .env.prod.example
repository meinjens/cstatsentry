# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database
POSTGRES_DB=statsentry
POSTGRES_USER=statsentry
POSTGRES_PASSWORD=your_very_secure_database_password_here

# Security
SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Steam API
STEAM_API_KEY=your_steam_api_key_here
STEAM_OPENID_URL=https://steamcommunity.com/openid
STEAM_API_URL=https://api.steampowered.com

# URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api

# Celery (Redis URLs are configured in docker-compose.prod.yml)
# Redis runs in Docker container

# Application
DEBUG=false
LOG_LEVEL=INFO